{% extends "base.twig" %}
{% block title %}Properties App - Property Table{% endblock %}
{% block brand %}Properties App - Property Table{% endblock %}
{% block body %}
<br>   
<br>
<br>   
<br>
<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8 box-blue text-center">Property Table</div>
        <div class="col-md-2"></div>
    </div>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8 jumbotron text-center">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <tr>
                        <th>Street Address</th>
                        <th>Suburb</th>
                        <th>State</th>
                        <th>Property Type</th>
                        <th>Land Area</th>
                        <th>Selling Price</th>
                        <th>Photo Filename</th>
                    </tr>   
                    
                    {% for row in records %}
                    
                    <tr>
                        <td>{{ row.street_address }}</td>
                        <td>{{ row.suburb }}</td>
                        <td>{{ row.state }}</td>
                        <td>{{ row.property_type }}</td>
                        <td>{{ row.land_area }}</td>
                        <td>{{ row.selling_price }}</td>
                        <td>
                            <img src="./static/assets/photos/{{row.filename}}"
                                 width="100" heaight="100" atl="{{row.filename}}" />
                        
                        </td>
                    </tr>    
                    {% endfor %}
                </table>
           </div>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>

{% endblock %}
