{% extends "base.twig" %}
{% block title %}Properties App - Search Properties{% endblock %}
{% block brand %}Properties App - Search Properties{% endblock %}
{% block body %}
<br>
<br>
<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 box-blue text-center">Search Form</div>
        <div class="col-md-3"></div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 jumbotron text-left">
            <form class="form-horizontal" action="" method="post" novalidate>

                <div class="form-group">                
                    <label class="control-label">Keyword:</label>
                    <input class="form-control" type="text"  name="keyword" maxlength="30" />
                </div>
                
                <br>   
                 <div class="form-group">   
                    <button class="btn btn-blue btn-block" type="submit" name="submit" value="submit">Submit</button>
                 </div>

            </form>
        </div>
        <div class="col-md-3"></div>
    </div>

</div>
{% endblock %}